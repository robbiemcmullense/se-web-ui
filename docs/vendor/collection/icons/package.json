{
  "name": "@se/icons",
  "version": "3.2.0",
  "description": "Create and distribute all Schneider-Electric icons accessible as fonts from SVG icons",
  "style": "css/styles.css",
  "repository": {
    "type": "git",
    "url": "https://github.schneider-electric.com/IoT/se-icons.git"
  },
  "publishConfig": {
    "registry": "https://nexus.tools.struxurewarecloud.com/repository/npm-internal/"
  },
  "keywords": [
    "se",
    "font",
    "icon",
    "schneider-electric"
  ],
  "author": "francois.delpech@se.com",
  "license": "MIT",
  "scripts": {
    "build": "grunt",
    "prebuild": "npm-run-all -s build-pre:*",
    "postbuild": "npm-run-all -s build-post:*",
    "build-pre:clearFolders": "rimraf docs css fonts scss",
    "build-pre:updateTags": "node template/updateTags.js",
    "build-post:scss-compile": "node-sass-chokidar --source-map true scss/ -o css",
    "build-post:autoprefixer": "postcss css/*.css --use autoprefixer -d css",
    "build-post:copystyle": "copy css/**/* docs/css",
    "build-post:copyfont": "copy docs/fonts/**/* !docs/fonts/**/*.css fonts"
  },
  "devDependencies": {
    "grunt": "^1.0.3",
    "grunt-webfont": "1.7.2",
    "rimraf": "^2.6.3",
    "autoprefixer": "^9.0.0",
    "chokidar-cli": "^1.2.0",
    "copy": "^0.3.2",
    "node-sass": "^4.9.2",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0"
  }
}
