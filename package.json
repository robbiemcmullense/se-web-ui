{
  "name": "@se/ui-component",
  "version": "0.0.1",
  "description": "This project is a POC to create HTML [custom element](https://developers.google.com/web/fundamentals/web-components/customelements) that can be used with any framework like jquery, React, Vue or even no framework at all.",
  "module": "dist/esm/index.js",
  "main": "dist/index.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "npm-run-all build:library copy:react copy:vue copy:docs",
    "start": "stencil build --dev --watch --serve --port 3344",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "build:library": "stencil build --docs",
    "copy:react": "cpx \"www/build/**/*\" demo-react/public",
    "copy:vue": "cpx \"www/build/**/*\" demo-vue/public",
    "copy:docs": "cpx \"www/**/*\" docs",
    "demo:react": "cd demo-react && yarn start",
    "demo:vue": "cd demo-vue && yarn start",
    "install:all": "npm-run-all install:*",
    "install:react": "cd demo-react && yarn",
    "install:vue": "cd demo-vue && yarn"
  },
  "dependencies": {
    "@stencil/core": "^0.17.1",
    "@stencil/sass": "^0.1.1"
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "http-server": "^0.11.1",
    "nodecat": "^2.0.0",
    "npm-run-all": "^4.1.5"
  },
  "license": "MIT"
}
