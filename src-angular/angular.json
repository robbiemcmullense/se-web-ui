{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "defaultProject": "framework",
  "projects": {
    "frameworks": {
      "root": "projects/frameworks",
      "sourceRoot": "projects/frameworks/src",
      "projectType": "library",
      "prefix": "se",
      "schematics": {
        "@schematics/angular:component": {
          "styleext": "scss"
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/frameworks/tsconfig.lib.json",
            "project": "projects/frameworks/ng-package.json"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/frameworks/src/test.ts",
            "tsConfig": "projects/frameworks/tsconfig.spec.json",
            "karmaConfig": "projects/frameworks/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/frameworks/tsconfig.lib.json",
              "projects/frameworks/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "src-angular"
}
