{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@core/*": ["../src_common/core/*"],
      "@env/*": ["../src_common/environments/*"],
      // When using yarn link
      "@se/*": ["../node_modules/@se/*"],
      "@angular/*": ["../node_modules/@angular/*"],
    }
  },
  "angularCompilerOptions": {
    "preserveWhitespaces": false
  }
}
